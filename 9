import heapq

def kClosest(points, k):
    # Calculate the distance and use a min-heap to find the k closest points
    return heapq.nsmallest(k, points, key=lambda point: point[0]**2 + point[1]**2)

# Example usage
points = [[1, 3], [-2, 2], [5, 8], [0, 1]]
k = 2
closest_points = kClosest(points, k)
print(closest_points)  # Output: [[-2, 2], [0, 1]]
